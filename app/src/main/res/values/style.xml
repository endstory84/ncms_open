<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Bottom Sheets TabLayout-->
    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabMaxWidth">100dp</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Splash theme. -->
    <style name="NCMS.SplashTheme" parent="NCMS.AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_theme</item>
    </style>

    <!-- Material AlertDialog Custom Design -->
    <style name="Widget.NCMS.AlertDialog.NCMS.Theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/MaterialAlertDialog.MaterialComponents.Title.Panel2</item>
        <item name="materialAlertDialogTitleIconStyle">@style/MaterialAlertDialog.App.Title.Icon</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.MaterialComponents.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.NCMS.Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.NCMS.Alert.Button.Negative</item>
    </style>

    <!-- Material Alert Dialog Shape -->
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <!-- Material Alert Dialog Panel -->
    <style name="MaterialAlertDialog.MaterialComponents.Title.Panel2" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <!-- Material Alert Dialog Icon -->
    <style name="MaterialAlertDialog.App.Title.Icon" parent="MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Material Alert Dialog Title -->
    <style name="MaterialAlertDialog.App.Title.Text"
           parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="fontFamily">@font/notosansregular</item>
    </style>

    <!-- Material Alert Dialog Body -->
    <style name="MaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:textColor">@color/font_color_1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/notosansregular</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Material Alert Dialog Shape - medium -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Material Alert Dialog Shape - small -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <!--<item name="cornerSize">16dp</item>-->
    </style>

    <!-- Material Alert Dialog Positive btn shape -->
    <style name="Widget.NCMS.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fillColor">@color/colorPrimary</item>
        <item name="android:textColor">?android:colorBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/white</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <!-- Material Alert Dialog Negative btn shape -->
    <style name="Widget.NCMS.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.NCMS.WtnccValueEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_70</item>
        <item name="android:background">@drawable/textview_border</item>
    </style>

    <style name="Widget.NCMS.WtnccValueEditTextLandScape" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/textview_border</item>
    </style>

    <!-- 조서 라벨 텍스트뷰 -->
    <style name="Widget.NCMS.WtnccLabelTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/wtnncTextCr</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">15sp</item>
        <item name="android:autoSizeMinTextSize">9sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nsquarebold</item>
    </style>

    <style name="Widget.NCMS.WtnccLabel2TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/wtnncTextCr</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">15sp</item>
        <item name="android:autoSizeMinTextSize">9sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:fontFamily">@font/nsquarebold</item>
    </style>


    <!-- 조서 서버 데이터 값 텍스트뷰 -->
    <style name="Widget.NCMS.WtnccValueTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:textColor">@color/gray_70</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">15sp</item>
        <item name="android:autoSizeMinTextSize">9sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/notosansregular</item>
    </style>

    <!-- Button -->
    <style name="Widget.NCMS.WtnccPopupButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/btnPopupText</item>
        <item name="strokeColor">@color/btnPopupText</item>
        <item name="fontFamily">@font/notosansmedium</item>
        <item name="android:backgroundTint">@color/btnPopup</item>
        <item name="rippleColor">@color/white</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.NCMS.CnfirmButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/wtnncTextCr</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nsquarebold</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/root_color_3</item>
        <item name="iconSize">50dp</item>
        <item name="iconPadding">10dp</item>
    </style>

    <style name="Widget.NCMS.WtnccButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/notosansmedium</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.NCMS.GIS.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/notosansmedium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.NCMS.Wtncc.addButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:background">@drawable/b_btn_add</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/wtnncBtnCr</item>
    </style>

    <style name="Widget.NCMS.Wtncc.addTextButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/b_btn_add</item>
        <item name="iconTint">@color/white</item>
        <item name="android:text">추가</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/notosansmedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconPadding">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/wtnncBtnCr</item>
    </style>

    <style name="Widget.NCMS.Wtncc.addButton2" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_add_thin</item>
        <item name="iconTint">@color/white</item>
        <item name="android:text">추가</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/notosansmedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconPadding">10dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/wtnncBtnCr</item>
