    <!-- Navi Theme -->
    <style name="Widget.NCMS.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NCMS.NavigationView</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemBackground">@drawable/drawer_item_bg</item>
        <!--<item name="itemIconSize">40dp</item>-->
        <item name="itemTextAppearance">@style/TextAppearance.NCMS.ListPrimary</item>
    </style>

    <style name="Widget.NCMS.NavigationLayerView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NCMS.NavigationLayerView</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.NCMS.H1</item>
        <item name="itemTextColor">@color/font_color_1</item>
        <item name="itemIconSize">36dp</item>
    </style>

    <style name="Widget.NCMS.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@color/white</item>
    </style>

    <style name="ThemeOverlay.NCMS.NavigationView" parent="">
        <item name="colorPrimary">@color/root_color_4</item>
        <item name="colorSurface">@color/root_color_4</item>
        <item name="colorOnSurface">@color/root_color_4</item>
        <item name="android:textColorSecondary">@color/gray_20</item>
    </style>

    <style name="ThemeOverlay.NCMS.NavigationLayerView" parent="">
        <item name="colorPrimary">?android:colorBackground</item>
        <item name="colorSurface">?android:colorBackground</item>
        <item name="colorOnSurface">?android:colorBackground</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>

    <!-- Text appearances -->

    <!-- For titles, e.g. Event Detail, Speaker Detail -->
    <style name="TextAppearance.NCMS.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/nsquarebold</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="fontFamily">@font/nsquarebold</item>
    </style>

    <!-- For smaller titles, e.g. Schedule day decorations -->
    <style name="TextAppearance.NCMS.H2" parent="@style/TextAppearance.NCMS.H1">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <!-- For other prominent text -->
    <style name="TextAppearance.NCMS.H3" parent="@style/TextAppearance.NCMS.H1">
        <item name="android:fontFamily">@font/nsquarebold</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="fontFamily">@font/nsquarebold</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="TextAppearance.NCMS.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/nsquareregular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/nsquareregular</item>
    </style>

    <!-- List item primary text, e.g. event titles, codelab titles -->
    <style name="TextAppearance.NCMS.ListPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/nsquareregular</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/nsquareregular</item>
    </style>

    <!-- Intermediate style to make further style extensions below easier to follow -->
    <style name="TextAppearance.NCMS.Body2" parent="TextAppearance.MaterialComponents.Body2"/>

    <!-- Section headers -->
    <style name="TextAppearance.NCMS.Overline" parent="@style/TextAppearance.NCMS.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="TextAppearance.NCMS.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/nsquarebold</item>
    </style>

    <style name="TextAppearance.NCMS.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/nsquareregular</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom Switch -->
    <style name="Widget.NCMS.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
