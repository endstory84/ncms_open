    <style name="ThemeOverlay.NCMS.Switch" parent="">
        <item name="colorOnSurface">@color/root_color_1</item>
        <item name="colorSecondary">@color/root_color_2</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.NCMS.Toolbar" parent="Widget.MaterialComponents.Toolbar">
