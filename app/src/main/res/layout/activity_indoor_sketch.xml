<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".IndoorSketchActivity">

    <FrameLayout
            android:id="@+id/thingIndoorCanvasView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <com.slaviboy.infinitegridview.InfiniteGridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_20"
                app:horizontalNormalLinesColor="@color/light_gray"
                app:horizontalThickLinesColor="@color/light_gray"
                app:verticalNormalLinesColor="@color/light_gray"
                app:verticalThickLinesColor="@color/light_gray"
                tools:ignore="MissingClass" />


    </FrameLayout>

    <include
            layout="@layout/include_indoorsketch_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            />

</androidx.constraintlayout.widget.ConstraintLayout>