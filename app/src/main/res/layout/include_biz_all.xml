<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="4dp"
        android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewdBizItem"
            app:shapeAppearance="@style/ShapeAppearance.MyApp.MediumComponent.Cut"
            android:alpha="0.8"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutMainHead1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardViewdBizItemLayout"
                    android:padding="10dp"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintTop_toTopOf="parent">
                <!-- 사업분류명 & 사업명 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/linearLayout19"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout20">

                    <TextView
                            android:id="@+id/textViewBizListCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            android:layout_marginStart="12dp"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:padding="6dp"
                            android:fontFamily="@font/nsquarebold"
                            android:background="@drawable/layout_round_btn_border"
                            android:textColor="?android:attr/colorBackground"
                            android:text="test" />

                    <TextView
                            android:id="@+id/textViewBizSaupCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/textViewBizListCategory"
                            android:textColor="?android:attr/textColorPrimary"
                            android:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="3sp"
                            app:autoSizeMaxTextSize="20sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/notosansbold"
                            android:layout_marginStart="10dp"
                            android:padding="6dp"
                            android:text="test" />

                    <TextView
                            android:id="@+id/textViewBizListName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/textViewBizSaupCode"
                            android:textColor="@color/colorPrimary"
                            android:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="3sp"
                            app:autoSizeMaxTextSize="20sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/notosansbold"
                            android:layout_marginStart="4dp"
                            android:padding="6dp"
                            android:text="test" />

                </LinearLayout>

                <!-- 소재지주소 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout19"
                        android:id="@+id/linearLayout20">

                    <TextView
                            android:id="@+id/textViewBizListAddr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/notosansregular"
                            android:layout_marginStart="6dp"
                            android:padding="10dp" />

                </LinearLayout>

                <!-- 시행자 & 사업부서 & 사업시작일 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout20"
                        android:id="@+id/linearLayout29">

                    <TextView
                            android:id="@+id/textViewBizListManager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            android:textColor="@color/font_color_1"
                            android:fontFamily="@font/notosansregular"
                            android:layout_marginStart="6dp"
                            android:padding="10dp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- 해당필지 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bizListSubJibun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/cardViewdBizItemLayout"
                    android:visibility="gone">

                <TextView
                        android:id="@+id/textViewBizListDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:layout_marginStart="10dp"
                        android:textColor="?android:textColorPrimary"
                        android:fontFamily="@font/notosansbold" />

                <ImageView
                        android:id="@+id/imageViewBizListSubMenuArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/textViewBizListDept"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_sort_down" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 상세정보 #1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detailJibunListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintVertical_bias="0"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bizListSubJibun">

                <!--<ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/detailJibunList"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                />-->

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/detailJibunList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_weight="1" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>