<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="4dp"
        android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewdBizItem"
            app:shapeAppearance="@style/ShapeAppearance.MyApp.MediumComponent.Cut"
            android:alpha="0.8"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutMainHead1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <!-- 사업분류명 & 사업명 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/linearLayout19"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout20">

                <TextView
                        android:id="@+id/textViewBizListCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:layout_marginStart="12dp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:padding="6dp"
                        android:fontFamily="@font/nsquarebold"
                        android:background="@drawable/layout_round_btn_border"
                        android:textColor="?android:attr/colorBackground"
                        android:text="test" />

                <TextView
                        android:id="@+id/textViewBizSaupCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/textViewBizListCategory"
                        android:textColor="?android:attr/textColorPrimary"
                        android:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="3sp"
                        app:autoSizeMaxTextSize="20sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosansbold"
                        android:layout_marginStart="10dp"
                        android:padding="6dp"
                        android:text="test" />

                <TextView
                        android:id="@+id/textViewBizListName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/textViewBizSaupCode"
                        android:textColor="@color/colorPrimary"
                        android:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="3sp"
                        app:autoSizeMaxTextSize="20sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosansbold"
                        android:layout_marginStart="4dp"
                        android:padding="6dp"
                        android:text="test" />

            </LinearLayout>

            <!-- 소재지주소 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout19"
                    android:id="@+id/linearLayout20">

                <TextView
                        android:id="@+id/textViewBizListAddr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/notosansregular"
                        android:layout_marginStart="6dp"
                        android:padding="10dp" />

            </LinearLayout>

            <!-- 시행자 & 사업부서 & 사업시작일 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout20"
                    android:id="@+id/linearLayout29">

                <TextView
                        android:id="@+id/textViewBizListManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:textColor="@color/font_color_1"
                        android:fontFamily="@font/notosansregular"
                        android:layout_marginStart="6dp"
                        android:padding="10dp" />

            </LinearLayout>

            <!-- 해당필지 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_main_head_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout29"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout19"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout20">

                <TextView
                        android:id="@+id/textViewBizListDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:layout_marginStart="10dp"
                        android:textColor="?android:textColorPrimary"
                        android:fontFamily="@font/notosansbold" />

                <ImageView
                        android:id="@+id/imageViewBizListSubMenuArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/textViewBizListDept"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_sort_down" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 상세정보 #1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_jibun_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintVertical_bias="0"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_main_head_4">

                <TextView
                        android:id="@+id/tv_main_layout_detail_1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/main_plus_menu_1"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:background="@drawable/textview_border_bg_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_2"
                        app:layout_constraintHorizontal_weight="1" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/main_plus_menu_2"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:background="@drawable/textview_border_bg_gray"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_1" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_3"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/main_plus_menu_3"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:background="@drawable/textview_border_bg_gray"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_2" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_4"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/main_plus_menu_4"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:background="@drawable/textview_border_bg_gray"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_3" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/main_plus_menu_5"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:background="@drawable/textview_border_bg_gray"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_4" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_6"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/main_plus_menu_6"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:background="@drawable/textview_border_bg_gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_5" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 상세정보 #2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_jibun_value"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/layout_jibun_label"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                <TextView
                        android:id="@+id/tv_main_layout_detail_7"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="@string/main_plus_menu_detail_1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/textview_border"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_8"
                        app:layout_constraintHorizontal_weight="1" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_8"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="@string/main_plus_menu_detail_2"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/textview_border"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_9"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_7" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_9"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="@string/main_plus_menu_detail_3"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/textview_border"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_10"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_8" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_10"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="@string/main_plus_menu_detail_4"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/textview_border"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_11"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_9" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_11"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="@string/main_plus_menu_detail_5"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/textview_border"
                        app:layout_constraintEnd_toStartOf="@id/tv_main_layout_detail_12"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_10" />

                <TextView
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/tv_main_layout_detail_12"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="@string/main_plus_menu_detail_6"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/textview_border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_main_layout_detail_11" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>