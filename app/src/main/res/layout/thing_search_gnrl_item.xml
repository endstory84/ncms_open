<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        android:background="@drawable/view_line">

    <LinearLayout
            android:id="@+id/linearLayoutThingGnrlItem01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:id="@+id/textViewThingGnrlItem01"
                android:text="@string/wtnncCommNum"
                android:layout_weight="1" />

        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:id="@+id/textViewThingGnrlItem02"
                android:text="@string/wtnncCommSclas"
                android:layout_weight="1" />

        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:id="@+id/textViewThingGnrlItem03"
                android:text="@string/wtnncCommThingKnd"
                android:layout_weight="1" />

        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:id="@+id/textViewThingGnrlItem04"
                android:text="@string/wtnncCommStrctStndrd"
                android:layout_weight="4" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayoutThingGnrlItem02"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutThingGnrlItem01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="0dp">

        <TextView
                style="@style/Widget.NCMS.WtnccValueTextView"
                android:id="@+id/textViewThingGnrlItem05"
                android:layout_weight="1"
                tools:text="001" />

        <TextView
                style="@style/Widget.NCMS.WtnccValueTextView"
                android:id="@+id/textViewThingGnrlItem06"
                android:layout_weight="1"
                android:text="@string/thingDialogComm" />

        <TextView
                style="@style/Widget.NCMS.WtnccValueTextView"
                android:id="@+id/textViewThingGnrlItem07"
                android:layout_weight="1" />

        <EditText
                style="@style/Widget.NCMS.WtnccValueEditText"
                android:id="@+id/editTextThingGnrlItem01"
                android:singleLine="true"
                android:inputType="text"
                tools:text="001"
                android:layout_weight="4" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayoutThingGnrlItem03"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutThingGnrlItem02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="0dp">

        <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.853"
                android:layout_margin="2dp"
                android:orientation="vertical">

            <TextView
                    style="@style/Widget.NCMS.WtnccLabelTextView"
                    android:id="@+id/textViewThingGnrlItem08"
                    android:text="@string/wtnncCommArQy"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                <TextView
                        style="@style/Widget.NCMS.WtnccLabelTextView"
                        android:id="@+id/textViewThingGnrlItem09"
                        android:text="@string/wtnncCommAll"
                        android:layout_weight="1" />

                <TextView
                        style="@style/Widget.NCMS.WtnccLabelTextView"
                        android:id="@+id/textViewThingGnrlItem10"
                        android:text="@string/wtnncCommIncrpr"
                        android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:id="@+id/textViewThingGnrlItem11"
                android:text="@string/wtnncCommUnit"
                android:layout_weight="1" />

        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:id="@+id/textViewThingGnrlItem12"
                android:text="@string/wtnncCommRm"
                android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayoutThingGnrlItem04"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutThingGnrlItem03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="0dp">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1.853"
                android:orientation="horizontal">

            <TextView
                    style="@style/Widget.NCMS.WtnccValueTextView"
                    android:id="@+id/textViewThingGnrlItem13"
                    android:layout_weight="1"
                    tools:text="전체" />

            <TextView
                    style="@style/Widget.NCMS.WtnccValueTextView"
                    android:id="@+id/textViewThingGnrlItem14"
                    android:layout_weight="1" />

        </LinearLayout>

        <TextView
                style="@style/Widget.NCMS.WtnccValueTextView"
                android:id="@+id/textViewThingGnrlItem15"
                android:layout_weight="1"
                tools:text="단위" />

        <TextView
                style="@style/Widget.NCMS.WtnccValueTextView"
                android:id="@+id/textViewThingGnrlItem16"
                android:layout_weight="2"
                tools:text="비고" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>