<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:text="@string/wtnncCommLgalAt"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/tv_bsn_lvstck_require1"
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:text="@string/bsnBrdLvstckNm"
                android:layout_weight="1" />

        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:text="@string/bsnBrdPdBgnde"
                android:layout_weight="1"
                android:background="@color/wtnncTextCr" />
        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:text="@string/bsnBrdPdEndde"
                android:layout_weight="1"
                android:background="@color/wtnncTextCr" />

        <TextView
                android:id="@+id/tv_bsn_lvstck_require2"
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:text="@string/bsnBrdQy"
                android:layout_weight="1" />



    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/textview_border"
                android:layout_margin="2dp">

            <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_margin="2dp" />

        </LinearLayout>

        <EditText
                style="@style/Widget.NCMS.WtnccValueEditText"
                android:layout_weight="1"
                android:inputType="text" />

        <TextView
                style="@style/Widget.NCMS.WtnccValueTextView"
                android:layout_weight="1" />
        <TextView
                style="@style/Widget.NCMS.WtnccValueTextView"
                android:layout_weight="1" />

        <EditText
                style="@style/Widget.NCMS.WtnccValueEditText"
                android:layout_weight="1"
                android:inputType="number" />



    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:text="@string/bsnStdrLvstckNm"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/tv_bsn_lvstck_require3"
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:text="@string/bsnStdrQy"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/tv_bsn_lvstck_require4"
                style="@style/Widget.NCMS.WtnccLabelTextView"
                android:text="@string/bsnCnvrsnQy"
                android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:background="@drawable/textview_border">

            <Spinner style="@style/Widget.NCMS.Spinner" />

        </LinearLayout>

        <TextView
                style="@style/Widget.NCMS.WtnccValueTextView"
                android:layout_weight="1" />

        <TextView
                style="@style/Widget.NCMS.WtnccValueTextView"
                android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>